{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="js-user-rating" data-is-authenticated="{{ app.user ? 'true' : 'false' }}" data-music="{{ jsonmusic }}"></div>


	<section>
		<div class="Musique-Recentes">
			<div class="title-musique-category">
				<h2>Musiques</h2>
			</div>
			<div class="lste-music">
				<div class="swiper">
					<div class="swiper-wrapper">
						{% for musics in music %}
							<div class="swiper-slide">
								<div class="card-content">
									{% if app.user is not null %}
										{% for favoris in musics.favoris %}
											{% if favoris.id == app.user.id %}
												<a href="{{ path('remove_favorite', {'id': musics.id}) }}">
													<i class="fa-solid fa-heart"></i>
												</a>
											{% else %}
												<a href="{{ path('add_favorite', {'id': musics.id}) }}">
													<i class="fa-regular fa-heart"></i>
												</a>
											{% endif %}
										{% else %}
											<a href="{{ path('add_favorite', {'id': musics.id}) }}">
												<i class="fa-regular fa-heart"></i>
											{% endfor %}
											{% else %}
										{% endif %}
										<div class="img-content" onclick="recupId({{musics.id}})">
											<img src="/uploads/{{musics.image}}" alt="">
										</div>
										<div class="music-infos">
											<h3>{{ musics.name}}</h3>
											<p>{{ musics.singer}}</p>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
						<div class="swiper-button-next"></div>
						<div class="swiper-button-prev"></div>
					</div>
				</section>
			</div>
		</div>
		<div class="palyerAudio">
			<audio id="audio" src="" controls autoplay></audio>
		</div>
	</section>
{% endblock %}
